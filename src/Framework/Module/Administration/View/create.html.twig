{% extends 'Framework/Module/Administration/View/base.html.twig' %}

{% block content %}
    <form class="form-horizontal" action="{{ action }}" method="POST">
        {% for field in fields %}
            {% if field.type == 'boolean' %}
                {% include 'Framework/Module/Administration/View/form/checkbox.html.twig' with {'field': field} %}
            {% elseif field.type == 'text' %}
                {% include 'Framework/Module/Administration/View/form/textarea.html.twig' with {'field': field} %}
            {% elseif field.type == 'choice' %}
                {% include 'Framework/Module/Administration/View/form/select.html.twig' with {'field': field} %}
            {% else %}
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">{{ field.name }}</label>
                    <div class="col-sm-10">
                        <input name="{{ field.name }}" type="text" class="form-control" id="inputEmail3" placeholder="{{ field.name }}">
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-default" value="Submit">
            </div>
        </div>
    </form>
{% endblock %}